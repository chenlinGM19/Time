<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".MainActivity">

    <!-- Header: Compact -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:background="#1F1F1F"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/control_panel"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_blocking"
            android:textColor="#FFC107"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card 1: Main Controls (Compacted) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_clock_rounded"
                android:backgroundTint="#252525"
                android:padding="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/group_appearance"
                    android:textColor="#2196F3"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <Button
                        android:id="@+id/btnToggleShow"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:textSize="11sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="@string/toggle_show" />

                    <Button
                        android:id="@+id/btnResetPos"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:textSize="11sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="@string/reset_pos"
                        android:textColor="#DDDDDD"/>

                    <Button
                        android:id="@+id/btnStyle"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:textSize="11sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="@string/change_style"
                        android:textColor="#DDDDDD"/>
                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <Button
                        android:id="@+id/btnSizeUp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:textSize="11sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="@string/increase_size"
                        android:textColor="#DDDDDD"/>

                    <Button
                        android:id="@+id/btnSizeDown"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:textSize="11sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="@string/decrease_size"
                        android:textColor="#DDDDDD"/>

                    <Button
                        android:id="@+id/btnToggleBg"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:textSize="11sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="@string/toggle_bg"
                        android:textColor="#DDDDDD"/>
                        
                    <Button
                        android:id="@+id/btnToggleOrient"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:textSize="11sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="@string/toggle_orient"
                        android:textColor="#DDDDDD"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Card 2: Behavior (Compacted) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_clock_rounded"
                android:backgroundTint="#252525"
                android:padding="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/group_behavior"
                    android:textColor="#4CAF50"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnTogglePassthrough"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1.2"
                        android:layout_marginEnd="4dp"
                        android:textSize="11sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="@string/toggle_passthrough" />
                        
                    <Button
                        android:id="@+id/btnToggleSeconds"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:textSize="11sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="@string/toggle_seconds"
                        android:textColor="#DDDDDD"/>
                        
                    <Button
                        android:id="@+id/btnToggleWeight"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:textSize="11sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="@string/toggle_weight"
                        android:textColor="#DDDDDD"/>

                    <Button
                        android:id="@+id/btnToggleTips"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:textSize="11sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="@string/toggle_tips"
                        android:textColor="#FF9800"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Card 3: Tasker Automation (Compacted) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_clock_rounded"
                android:backgroundTint="#252525"
                android:padding="8dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/group_automation"
                    android:textColor="#FF5722"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <!-- Events Copy -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnCopyClick"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="Copy Click"
                        android:textSize="10sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:textColor="#BBBBBB"/>

                    <Button
                        android:id="@+id/btnCopyDouble"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="Copy Double"
                        android:textSize="10sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:textColor="#BBBBBB"/>

                    <Button
                        android:id="@+id/btnCopyLong"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="Copy Long"
                        android:textSize="10sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:textColor="#BBBBBB"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333"
                    android:layout_marginVertical="2dp"/>

                <!-- Control Copy -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnCopySetVisible"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="@string/copy_set_visible"
                        android:textSize="10sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:textColor="#BBBBBB"/>

                    <Button
                        android:id="@+id/btnCopySetBlocking"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="@string/copy_set_blocking"
                        android:textSize="10sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:textColor="#BBBBBB"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>