<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/control_panel"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/desc"
        android:textColor="#AAAAAA"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <GridLayout
        android:id="@+id/gridControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="2"
        android:useDefaultMargins="true"
        android:alignmentMode="alignMargins"
        app:layout_constraintTop_toBottomOf="@id/tvDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Row 1 -->
        <Button
            android:id="@+id/btnToggleShow"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="@string/toggle_show" />

        <Button
            android:id="@+id/btnTogglePassthrough"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="@string/toggle_passthrough" />

        <Button
            android:id="@+id/btnStyle"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="@string/change_style" />
            
        <Button
            android:id="@+id/btnToggleBg"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="@string/toggle_bg" />

        <!-- Row 2 -->
        <Button
            android:id="@+id/btnSizeUp"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="@string/increase_size" />

        <Button
            android:id="@+id/btnSizeDown"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="@string/decrease_size" />
            
        <Button
            android:id="@+id/btnToggleSeconds"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="@string/toggle_seconds" />

        <Button
            android:id="@+id/btnToggleWeight"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="@string/toggle_weight" />

    </GridLayout>

    <!-- Tasker Copy Section -->
    <LinearLayout
        android:id="@+id/llTasker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/gridControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tasker_setup"
            android:textColor="#DDDDDD"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCopyClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/copy_click"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="#AAAAAA"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnCopyDouble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/copy_double"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="#AAAAAA"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnCopyLong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/copy_long"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="#AAAAAA"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_blocking"
        android:textColor="#FFC107"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>